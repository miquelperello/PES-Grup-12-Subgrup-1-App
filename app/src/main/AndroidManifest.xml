<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pes.securevent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.pes.securevent.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pes.securevent.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="com.pes.securevent.Esdeveniment"
            android:parentActivityName="com.pes.securevent.MainActivity"
            android:theme="@style/MyEvent">
        </activity>

        <activity android:name="com.pes.securevent.MyEsdeveniment"
            android:parentActivityName="com.pes.securevent.MainActivity"
            android:theme="@style/MyEvent">
        </activity>

    </application>

</manifest>